package fundamentos;

public class A2reaCircunferencia {

	public static void main(String[] args) {
		double area, raio; //declaração de variaveis (tipo primitivo double)
		final double PI = 3.1415; //declaração de constante usando a palavra reservada "final";
		raio = 3.4;
		area = PI * raio * raio;

		System.out.println(area);
	}

}
